@model Nudge.Models.Trophee


@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Etes vous surs de vouloir supprimer ce trophee ? @Html.DisplayFor(model => model.Personne.Prenom) risque d'être très déçu...</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Personne)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Personne.Prenom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Defi.Intitule)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Defi.Intitule)
        </dd>
        <dt class = "col-sm-2">
            Le trophee
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomTrophee)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
